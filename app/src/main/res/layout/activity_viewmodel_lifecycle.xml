<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewmodel"
            type="com.vikskod.viewmodel.MainActivityViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rotate the screen. Rotation doesn't set counter to 0 because of ViewModel scope"
            android:textAlignment="center"
            android:textSize="10sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Count: "
            android:textAlignment="center"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnIncrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onIncreaseClicked"
            android:text="Increase Count"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tvSecondExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onSecondExampleClicked"
            android:text="Second Example"
            android:textAllCaps="false"
            android:textColor="@color/selector"
            android:textSize="16sp" />

    </LinearLayout>
</layout>